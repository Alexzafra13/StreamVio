---
// src/pages/history.astro
// Página del historial de visualización

// Importar layout y componentes
import MainLayout from '../layouts/MainLayout.astro';
import Card from '../components/ui/Card';
import Button from '../components/ui/Button';
import MediaGrid from '../components/media/browser/MediaGrid';

// Componentes React y hooks
import { useState, useEffect, useContext } from 'react';
import { UIContext } from '../context/UIContext';
import { MediaContext } from '../context/MediaContext';

// Componente React para el contenido dinámico
const WatchHistory = () => {
  // Estados
  const [activeTab, setActiveTab] = useState('recent');
  const [history, setHistory] = useState([]);
  const [loading, setLoading] = useState(true);
  
  // Contextos
  const { showSuccess, showError, showConfirmation } = useContext(UIContext);
  const { 
    loadWatchHistory, 
    getRecentlyWatched, 
    getInProgress,
    clearWatchHistory
  } = useContext(MediaContext);

  // Cargar datos de historial
  useEffect(() => {
    const loadHistory = async () => {
      try {
        setLoading(true);
        
        let historyData;
        
        // Cargar diferentes datos según la pestaña activa
        if (activeTab === 'recent') {
          historyData = await getRecentlyWatched(20);
        } else if (activeTab === 'inProgress') {
          historyData = await getInProgress(20);
        } else {
          historyData = await loadWatchHistory({
            limit: 20,
            includeCompleted: true,
            includeDetails: true
          });
        }
        
        setHistory(historyData || []);
      } catch (error) {
        console.error('Error al cargar historial:', error);
        showError('No se pudo cargar el historial de visualización');
      } finally {
        setLoading(false);
      }
    };

    loadHistory();
  }, [activeTab]);

  // Manejar borrado del historial
  const handleClearHistory = () => {
    showConfirmation(
      'Borrar historial',
      <p>{"¿Estás seguro de que deseas borrar todo tu historial de visualización? Esta acción no se puede deshacer."}</p>,
      async () => {
        try {
          await clearWatchHistory();
          setHistory([]);
          showSuccess('Historial borrado correctamente');
        } catch (error) {
          console.error('Error al borrar historial:', error);
          showError('No se pudo borrar el historial');
        }
      }
    );
  };

  // Formatear fecha para mostrar
  const formatDate = (dateString) => {
    const date = new Date(dateString);
    return new Intl.DateTimeFormat('es', {
      day: '2-digit',
      month: '2-digit',
      year: 'numeric',
      hour: '2-digit',
      minute: '2-digit'
    }).format(date);
  };

  return (
    <div class="space-y-6">
      {/* Encabezado con tabs */}
      <div class="flex flex-wrap justify-between items-center gap-4 mb-6">
        <h1 class="text-2xl font-bold">Historial de visualización</h1>
        
        <Button 
          variant="ghost" 
          onClick={handleClearHistory}
          disabled={history.length === 0}
        >
          Borrar historial
        </Button>
      </div>

      {/* Pestañas */}
      <div class="border-b border-gray-700 mb-6">
        <div class="flex space-x-1 overflow-x-auto pb-1">
          <button
            class={`px-4 py-2 text-sm font-medium rounded-t-md ${
              activeTab === 'recent' 
                ? 'bg-background-card text-primary border-b-2 border-primary' 
                : 'text-text-secondary hover:text-text-primary'
            }`}
            onClick={() => setActiveTab('recent')}
          >
            Vistos recientemente
          </button>
          <button
            class={`px-4 py-2 text-sm font-medium rounded-t-md ${
              activeTab === 'inProgress' 
                ? 'bg-background-card text-primary border-b-2 border-primary' 
                : 'text-text-secondary hover:text-text-primary'
            }`}
            onClick={() => setActiveTab('inProgress')}
          >
            En progreso
          </button>
          <button
            class={`px-4 py-2 text-sm font-medium rounded-t-md ${
              activeTab === 'all' 
                ? 'bg-background-card text-primary border-b-2 border-primary' 
                : 'text-text-secondary hover:text-text-primary'
            }`}
            onClick={() => setActiveTab('all')}
          >
            Todo el historial
          </button>
        </div>
      </div>

      {/* Vista del historial en modo de lista para "Todo el historial" */}
      {activeTab === 'all' && !loading && (
        history.length > 0 ? (
          <Card>
            <table class="w-full text-left">
              <thead class="bg-background-dark">
                <tr>
                  <th class="p-3">Título</th>
                  <th class="p-3">Progreso</th>
                  <th class="p-3 hidden md:table-cell">Tipo</th>
                  <th class="p-3 hidden md:table-cell">Biblioteca</th>
                  <th class="p-3">Visto el</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-700">
                {history.map(item => (
                  <tr key={item.id} class="hover:bg-background-dark transition-colors">
                    <td class="p-3">
                      <a 
                        href={`/media/${item.media_id}`} 
                        class="font-medium text-primary hover:text-primary-hover"
                      >
                        {item.title}
                      </a>
                    </td>
                    <td class="p-3">
                      {item.completed ? (
                        <span class="px-2 py-1 bg-green-900/30 text-green-500 rounded-full text-xs">
                          Completado
                        </span>
                      ) : (
                        <>
                          {Math.round((item.position / (item.total_duration || 1)) * 100)}%
                          <div class="w-24 h-1.5 bg-gray-700 rounded-full mt-1 overflow-hidden">
                            <div 
                              class="h-full bg-primary" 
                              style={{ width: `${Math.round((item.position / (item.total_duration || 1)) * 100)}%` }}
                            ></div>
                          </div>
                        </>
                      )}
                    </td>
                    <td class="p-3 hidden md:table-cell">
                      {{
                        'movie': 'Película',
                        'series': 'Serie',
                        'episode': 'Episodio',
                        'music': 'Música',
                        'photo': 'Foto'
                      }[item.type] || item.type}
                    </td>
                    <td class="p-3 hidden md:table-cell">
                      {item.library_name}
                    </td>
                    <td class="p-3 text-sm">
                      {formatDate(item.watched_at)}
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </Card>
        ) : (
          <div class="text-center py-10">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-text-secondary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={1} d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <h3 class="text-xl font-bold mb-2">No hay historial</h3>
            <p class="text-text-secondary mb-6">
              Aún no has visualizado ningún contenido.
            </p>
            <Button as="a" href="/media" variant="primary">
              Explorar contenido
            </Button>
          </div>
        )
      )}

      {/* Vista del historial en modo de grid para "Recientes" y "En progreso" */}
      {(activeTab === 'recent' || activeTab === 'inProgress') && (
        <MediaGrid 
          items={history} 
          loading={loading} 
          showEmpty={true}
          emptyMessage={activeTab === 'recent' 
            ? "No has visto ningún contenido recientemente" 
            : "No tienes contenido en progreso"
          }
          aspectRatio={activeTab === 'inProgress' ? '16/9' : '2/3'}
        />
      )}
    </div>
  );
};
---

<MainLayout title="Historial de visualización">
  <WatchHistory client:load />
</MainLayout>