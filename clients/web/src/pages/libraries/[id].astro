---
// src/pages/libraries/[id].astro
// Página de detalle de una biblioteca específica

// Importar layout y componentes
import MainLayout from '../../layouts/MainLayout.astro';
import LibraryDetailComponent from '../../components/library/LibraryDetailComponent';

// Obtener el ID de la biblioteca de los parámetros de la URL
const { id } = Astro.params;
const libraryId = parseInt(id);
---

<MainLayout title="Detalles de biblioteca">
  <LibraryDetailComponent client:load libraryId={libraryId} />
</MainLayout>