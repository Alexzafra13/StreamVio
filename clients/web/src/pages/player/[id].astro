---
// Esta página redirige de la antigua URL /player/[id] a la nueva URL /media/[id]

// Generar una única ruta para mantener compatibilidad con la estructura
export function getStaticPaths() {
  return [
    { params: { id: 'placeholder' } }
  ];
}

const { id } = Astro.params;
---

<meta http-equiv="refresh" content={`0;url=/media/${id}`}>

<script>
  // En caso de que la redirección por meta no funcione
  const id = document.location.pathname.split('/').pop();
  window.location.href = `/media/${id}`;
</script>