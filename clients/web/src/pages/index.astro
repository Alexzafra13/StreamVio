---
import Layout from '../layouts/Layout.astro';
import HomeDashboard from '../components/HomeDashboard';
---

<Layout title="StreamVio - Tu centro de medios personal">
  <main class="container mx-auto px-4 py-8">
    <div class="max-w-6xl mx-auto mt-8">
      <div id="home-dashboard">
        <!-- El HomeDashboard se renderizará con client:load y tiene manejo interno
             para casos donde el usuario no está autenticado -->
        <HomeDashboard client:load />
      </div>
      
      <!-- Contenido alternativo para usuarios no autenticados -->
      <div id="not-authenticated" class="hidden">
        <div class="text-center py-10">
          <h1 class="text-4xl font-bold text-blue-500 mb-4">Bienvenido a StreamVio</h1>
          <p class="text-xl text-gray-300 mb-8">Tu plataforma personal de streaming de medios</p>
          
          <div class="bg-gray-800 rounded-lg p-8 max-w-2xl mx-auto">
            <h2 class="text-2xl font-semibold mb-4">Accede a tu contenido</h2>
            <p class="text-gray-400 mb-6">Inicia sesión para ver tu biblioteca personal de películas, series y música.</p>
            
            <a href="/auth" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-3 rounded-lg inline-block transition">
              Iniciar Sesión
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</Layout>

<script>
  // Este script solo se ejecuta en el cliente y maneja el caso en que el usuario no esté autenticado
  document.addEventListener('DOMContentLoaded', () => {
    const token = localStorage.getItem('streamvio_token');
    
    // No es necesario mostrar/ocultar elementos, ya que HomeDashboard ahora maneja 
    // internamente el caso de usuario no autenticado
    if (!token) {
      console.log('Usuario no autenticado, HomeDashboard mostrará la interfaz de bienvenida');
    }
  });
</script>